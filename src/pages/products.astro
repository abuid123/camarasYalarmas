---
// src/pages/productos.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import ProductCard from '../components/ProductCard.astro';
import ContactForm from '../components/ContactForm.astro';

const categories = [
  {
    name: 'Cámaras de Seguridad',
    icon: 'camera',
    products: [
      {
        name: 'Cámara IP Full HD',
        description: 'Cámara Full HD con visión nocturna y detección de movimiento',
        image: '/placeholder.svg'
      },
      {
        name: 'Cámara para Exteriores',
        description: 'Resistente al agua y con visión nocturna de largo alcance',
        image: '/placeholder.svg'
      },
      {
        name: 'Cámara 360°',
        description: 'Cobertura completa con rotación automática y zoom digital',
        image: '/placeholder.svg'
      }
    ]
  },
  {
    name: 'Sistemas de Alarmas',
    icon: 'bell',
    products: [
      {
        name: 'Kit de Alarma para Hogar',
        description: 'Sistema completo con sensores de puerta y ventana',
        image: '/placeholder.svg'
      },
      {
        name: 'Alarma para Negocios',
        description: 'Protección avanzada con monitoreo 24/7',
        image: '/placeholder.svg'
      },
      {
        name: 'Sensor de Movimiento',
        description: 'Detección precisa con tecnología infrarroja',
        image: '/placeholder.svg'
      }
    ]
  },
  {
    name: 'Accesorios y Complementos',
    icon: 'plus-circle',
    products: [
      {
        name: 'DVR 8 Canales',
        description: 'Grabador digital para hasta 8 cámaras con disco duro incluido',
        image: '/placeholder.svg'
      },
      {
        name: 'Cable Coaxial 100m',
        description: 'Cable de alta calidad para instalación de cámaras',
        image: '/placeholder.svg'
      },
      {
        name: 'Fuente de Alimentación',
        description: 'Fuente conmutada de 12V para sistemas de seguridad',
        image: '/placeholder.svg'
      }
    ]
  }
];

const featuredProduct = {
  name: 'Kit de 4 Cámaras con Instalación',
  description: '¡Oferta del mes! Sistema completo de vigilancia con instalación incluida',
  image: '/placeholder.svg'
};
---

<Layout title="Productos | Cámaras y Alarmas LucasCardozo">
  <Header />
  <main class="pt-16">
    <section class="bg-black text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Descubre Nuestros Productos</h1>
        <p class="text-xl md:text-2xl">Explora nuestras cámaras, cerraduras digitales, alarmas y accesorios de seguridad diseñados para proteger lo que más importa.</p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {categories.map((category) => (
            <div class="text-center">
              <div class="bg-gray-100 rounded-full p-8 mb-4 inline-block">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  {category.icon === 'camera' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  )}
                  {category.icon === 'bell' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                  )}
                  {category.icon === 'plus-circle' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                  )}
                </svg>
              </div>
              <h2 class="text-2xl font-semibold mb-2">{category.name}</h2>
            </div>
          ))}
        </div>
      </div>
    </section>

    {categories.map((category) => (
      <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl font-bold mb-8 text-center">{category.name}</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {category.products.map((product) => (
              <ProductCard product={product} />
            ))}
          </div>
        </div>
      </section>
    ))}

    <section class="py-16 bg-black text-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8 text-center">Destacado del Mes</h2>
        <div class="max-w-2xl mx-auto">
          <ProductCard product={featuredProduct} featured={true} />
        </div>
      </div>
    </section>
    <ContactForm />
  </main>
  <WhatsAppButton />
  <Footer />
</Layout>